<h1> Create a Garden</h1>
<br >
 
    <% if @garden.errors.any? %>
    <% @garden.errors.full_messages.each do |error_message|%>
     <li style="color: red"> <%= error_message %></li>
     <% end %>
<%end%>

<%= form_for (@garden)  do |f| %>
    
    <%= f.label :Garden_name %>
    <%= f.text_field :garden_name %>
<br>
    
    <%= f.label :Category %>
    <%= f.select(:category, ["Vegetable", "Fruit", "Herbs", "Flower", "Miscellaneous"])%>

<br>
    <%= f.label :Difficulty_Rating%>
    <%= f.text_field :difficulty_rating%>

<br>
    <%= f.label :Description %>
    <%= f.text_field :description%>
<br>
<%= f.hidden_field :user_id, :value => current_user.id %>
<br>

<%=  f.submit "Submit" %>

<% end  %>