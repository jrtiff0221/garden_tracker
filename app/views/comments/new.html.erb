<h1> Create a Comment</h1>
<br >
 
    <% if @comment.errors.any? %>
    <% @comment.errors.full_messages.each do |error_message|%>
     <li style="color: red"> <%= error_message %></li>
     <% end %>
<%end%>

    

<%= form_for @comment do |f| %>
    
    <%= f.label :Author %>
    <%= f.text_field :author %>

<br>
    <%= f.label :Title%>
    <%= f.text_field :title %>
<br>
    <%= f.label :Message%>
    <%= f.text_field :message %>


<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :garden_id, :value => params[:garden_id] %>
<br><br>

<%=  f.submit "Submit" %>

<%end%>